name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: artifact to which basic cleaning steps should be applied
        type: string

      output_artifact:
        description: artifact generated from basic_cleaning
        type: string

      output_type:
        description: type of output artifact generated
        type: string

      output_description:
        description: description of artifact generated by ourtput of basic_cleaning
        type: string

      min_price:
        description: minimum price to include post clean
        type: float

      max_price:
        description: maximum price to include post clean
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
